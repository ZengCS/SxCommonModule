<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccentPress" />

            <stroke android:width="0dip" android:color="#249cd3" />

            <corners android:radius="5dp" />

            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccentPress" />

            <stroke android:width="0dip" android:color="#249cd3" />

            <corners android:radius="5dp" />

            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorAccent" />

            <stroke android:width="0dip" android:color="#cbcaca" />

            <corners android:radius="5dp" />

            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape>
    </item>

</selector>
