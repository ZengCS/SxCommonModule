<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_white_5dp"
        android:orientation="vertical">

        <!--Dialog标题部分-->
        <include layout="@layout/dialog_custom_common_title" />

        <!--具体显示内容-->
        <LinearLayout
            android:id="@+id/id_container_dialog_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120px"
            android:orientation="vertical">

        </LinearLayout>

        <!--底部按钮-->
        <include layout="@layout/dialog_custom_common_button" />
    </LinearLayout>
</LinearLayout>